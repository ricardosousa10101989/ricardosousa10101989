{
  "extends": "airbnb-base",

  "globals": {
    "document": true,
    "jQuery": true,
    "IntersectionObserver": true,
    "lightbox": true,
    "MutationObserver": true,
    "name": true,
    "window": true
  },

  "rules": {
    "array-bracket-spacing": [
      "error",
      "always"
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "brace-style": [
      "error",
      "stroustrup",
      {
        "allowSingleLine": true
      }
    ],
    "class-methods-use-this": 0,
    "global-require": 0,
    "jsx-a11y/alt-text": 0,
    "no-continue": 0,
    "no-param-reassign": 0,
    "no-plusplus": 0,
    "no-underscore-dangle": 0,
    "no-useless-constructor": 0,
    "wrap-iife": 0
  }
}
