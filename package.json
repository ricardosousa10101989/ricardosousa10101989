{
  "name": "plantaecorta",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all erase:public pre-build -p watch:*",
    "build": "npm-run-all erase:public pre-build -p build:*",
    "pre-build": "npm-run-all -p pre-build:*",
    "pre-build:configs": "node scripts/configs.js",
    "build:css": "npm-run-all -s css:scss-compile css:postcss",
    "build:hugo": "hugo",
    "watch:browsersync": "browser-sync public -w --port 3000 --no-ui",
    "watch:css": "chokidar 'scss/**/*.scss' -c 'npm run build:css' --initial",
    "watch:hugo": "hugo -w",
    "erase:public": "rm -Rf ./public && mkdir ./public",
    "css:postcss": "postcss public/css/*.css -d public/css --use autoprefixer --use cssnano --verbose",
    "css:scss-compile": "node-sass scss/ -o public/css --include-path ./node_modules"
  },
  "dependencies": {
    "autoprefixer": "^9.7.4",
    "browser-sync": "^2.26.7",
    "chalk": "^3.0.0",
    "chokidar-cli": "^2.1.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "find-and-replace": "^1.0.2",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "toml-require": "^1.2.0"
  }
}
