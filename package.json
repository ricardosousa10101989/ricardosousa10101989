{
  "name": "plantaecorta",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all -s erase:public build:configs build:hugo build:sass",
    "serve": "serve -s public",
    "erase:public": "rm -Rf ./public && mkdir ./public",
    "build:configs": "node scripts/configs.js",
    "build:hugo": "hugo",
    "build:sass": "npm-run-all -s sass:scss-compile sass:postcss",
    "sass:scss-compile": "node-sass scss/ -o public/css --include-path ./node_modules",
    "sass:postcss": "postcss public/css/*.css -d public/css --use autoprefixer --use cssnano --verbose"
  },
  "dependencies": {
    "autoprefixer": "^9.7.4",
    "chalk": "^3.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "find-and-replace": "^1.0.2",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "toml-require": "^1.2.0"
  }
}
